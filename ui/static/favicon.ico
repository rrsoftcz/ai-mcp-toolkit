<svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Gradient for the main circle -->
    <linearGradient id="aiGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#06B6D4;stop-opacity:1" />
    </linearGradient>
    
    <!-- Inner glow effect -->
    <radialGradient id="innerGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:rgba(255,255,255,0.3);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgba(255,255,255,0);stop-opacity:0" />
    </radialGradient>
    
    <!-- Shadow filter -->
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <dropShadow dx="1" dy="2" stdDeviation="2" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Main circle with gradient -->
  <circle cx="16" cy="16" r="14" fill="url(#aiGradient)" filter="url(#shadow)"/>
  
  <!-- Inner glow overlay -->
  <circle cx="16" cy="16" r="14" fill="url(#innerGlow)"/>
  
  <!-- Neural network pattern -->
  <g stroke="rgba(255,255,255,0.4)" stroke-width="0.8" fill="none">
    <!-- Network nodes -->
    <circle cx="8" cy="10" r="1.5" fill="rgba(255,255,255,0.8)"/>
    <circle cx="24" cy="10" r="1.5" fill="rgba(255,255,255,0.8)"/>
    <circle cx="12" cy="22" r="1.5" fill="rgba(255,255,255,0.8)"/>
    <circle cx="20" cy="22" r="1.5" fill="rgba(255,255,255,0.8)"/>
    <circle cx="16" cy="16" r="2" fill="rgba(255,255,255,0.9)"/>
    
    <!-- Network connections -->
    <path d="M8,10 L16,16 M24,10 L16,16 M16,16 L12,22 M16,16 L20,22"/>
    <path d="M8,10 L12,22 M24,10 L20,22" stroke-width="0.5"/>
  </g>
  
  <!-- AI Text with better positioning -->
  <text x="16" y="19" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" font-weight="bold" fill="white">
    AI
  </text>
  
  <!-- Subtle highlight on top -->
  <ellipse cx="16" cy="8" rx="8" ry="3" fill="rgba(255,255,255,0.15)"/>
</svg>
