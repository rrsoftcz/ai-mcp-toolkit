# AI MCP Toolkit - Server Deployment Configuration
# This configuration allows the system to work when accessed via IP address from other machines

# ============================================
# Server Configuration
# ============================================
# Set to 0.0.0.0 to allow access from other machines on the network
MCP_HOST=0.0.0.0
MCP_PORT=8000

# ============================================
# Ollama Configuration
# ============================================
# Keep Ollama on localhost since it runs on the same server machine
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=qwen2.5:14b

# ============================================
# Web UI Configuration  
# ============================================
# Set to 0.0.0.0 to allow access from other machines on the network
UI_HOST=0.0.0.0
UI_PORT=5173

# ============================================
# Performance Configuration
# ============================================
MAX_TEXT_LENGTH=200000
CHUNK_SIZE=2000
TEMPERATURE=0.1
MAX_TOKENS=4000

# ============================================
# CORS Configuration
# ============================================
# Allow all origins for development/testing
ENABLE_CORS=true
CORS_ORIGINS=*

# ============================================
# Development Configuration
# ============================================
LOG_LEVEL=INFO
ENABLE_CACHE=true
CACHE_TTL=3600